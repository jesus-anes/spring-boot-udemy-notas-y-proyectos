	<div class="container">
		<form th:action="@{/form}" th:object="${usuario}" method="post" class="p-4">

			<!-- Lista de países -->
			<div class="mb-3">
				<label for="pais" class="form-label">Lista Paises</label>
				<select id="pais" th:field="*{pais}" class="form-select">
					<option value="">-- Seleccionar --</option>
					<option th:each="pais : ${listaPaises}" th:text="${pais.nombre}" th:value="${pais.id}"></option>
				</select>
				<div class="text-danger" th:if="${#fields.hasErrors('pais')}" th:errors="*{pais}"></div>
			</div>

			<!-- Checkbox habilitar -->
			<div class="form-check mb-3">
				<input type="checkbox" id="habilitar" th:field="*{habilitar}" class="form-check-input">
				<label for="habilitar" class="form-check-label">Habilitar</label>
			</div>

			<!-- Género (radio buttons) -->
			<div class="mb-3">
				<label class="form-label">Género</label>
				<div th:each="gen : ${genero}" class="form-check">
					<input type="radio" th:field="*{genero}" th:value="${gen}" class="form-check-input">
					<label th:for="${#ids.prev('genero')}" th:text="${gen}" class="form-check-label"></label>
				</div>
				<div class="text-danger" th:if="${#fields.hasErrors('genero')}" th:errors="*{genero}"></div>
			</div>

			<!-- Roles (checkboxes) -->
			<div class="mb-3">
				<label class="form-label">Roles</label>
				<div th:each="role : ${listaRoles}" class="form-check">
					<input type="checkbox" th:field="*{roles}" th:value="${role.id}"
						th:checked="${#lists.contains(usuario.roles, role)}" class="form-check-input">
					<label th:for="${#ids.prev('roles')}" th:text="${role.nombre}" class="form-check-label"></label>
				</div>
				<div class="text-danger" th:if="${#fields.hasErrors('roles')}" th:errors="*{roles}"></div>
			</div>

			<!-- ID para validar -->
			<div class="mb-3">
				<label for="IDparaValidar" class="form-label">ID para Validar</label>
				<input type="text" id="IDparaValidar" th:field="*{IDparaValidar}" class="form-control">
				<div class="text-danger" th:if="${#fields.hasErrors('IDparaValidar')}" th:errors="*{IDparaValidar}">
				</div>
			</div>

			<!-- Nombre -->
			<div class="mb-3">
				<label for="nombre" class="form-label">Nombre</label>
				<input type="text" id="nombre" th:field="*{nombre}" class="form-control">
				<div class="text-danger" th:if="${#fields.hasErrors('nombre')}" th:errors="*{nombre}"></div>
			</div>

			<!-- Apellido -->
			<div class="mb-3">
				<label for="apellido" class="form-label">Apellido</label>
				<input type="text" id="apellido" th:field="*{apellido}" class="form-control">
				<div class="text-danger" th:if="${#fields.hasErrors('apellido')}" th:errors="*{apellido}"></div>
			</div>

			<!-- Username -->
			<div class="mb-3">
				<label for="username" class="form-label">Username</label>
				<input type="text" id="username" th:field="*{username}" class="form-control">
				<div class="text-danger" th:if="${#fields.hasErrors('username')}" th:errors="*{username}"></div>
			</div>

			<!-- Password -->
			<div class="mb-3">
				<label for="password" class="form-label">Password</label>
				<input type="password" id="password" th:field="*{password}" class="form-control">
				<div class="text-danger" th:if="${#fields.hasErrors('password')}" th:errors="*{password}"></div>
			</div>

			<!-- Email -->
			<div class="mb-3">
				<label for="email" class="form-label">Email</label>
				<input type="email" id="email" th:field="*{email}" class="form-control">
				<div class="text-danger" th:if="${#fields.hasErrors('email')}" th:errors="*{email}"></div>
			</div>

			<!-- Cuenta -->
			<div class="mb-3">
				<label for="cuenta" class="form-label">Cuenta</label>
				<input type="number" id="cuenta" th:field="*{cuenta}" class="form-control">
				<div class="text-danger" th:if="${#fields.hasErrors('cuenta')}" th:errors="*{cuenta}"></div>
			</div>

			<!-- Fecha nacimiento -->
			<div class="mb-3">
				<label for="fechaNacimiento" class="form-label">Fecha de nacimiento</label>
				<input type="date" id="fechaNacimiento" th:field="*{fechaNacimiento}" class="form-control"
					placeholder="yyyy-MM-dd">
				<div class="text-danger" th:if="${#fields.hasErrors('fechaNacimiento')}" th:errors="*{fechaNacimiento}">
				</div>
			</div>

			<!-- Botón submit -->
			<div class="mb-3">
				<input type="submit" value="Enviar" class="btn btn-primary">
			</div>

			<!-- Campo oculto -->
			<input type="hidden" th:field="*{valorSecreto}">
		</form>
	</div>
