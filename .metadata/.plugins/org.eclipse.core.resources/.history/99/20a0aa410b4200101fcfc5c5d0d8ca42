<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">

<body>
	<nav th:fragment="paginator">

		<ul class="pagination">
			<!-- Primera página -->
			<li class="page-item" th:classappend="${page.first} ? 'disabled'">
				<a class="page-link" th:href="@{${page.url}(page=0)}" th:if="${not page.first}">Primera</a>
				<span class="page-link" th:if="${page.first}">Primera</span>
			</li>

			<!-- Página anterior -->
			<li class="page-item" th:classappend="${page.paginaActual == 1} ? 'disabled'">
				<a class="page-link" th:href="@{${page.url}(page=${page.paginaActual - 2})}"
					th:if="${page.paginaActual > 1}">Anterior</a>
				<span class="page-link" th:if="${page.paginaActual == 1}">Anterior</span>
			</li>

			<!-- Páginas intermedias -->
			<li class="page-item" th:each="item : ${page.paginas}" th:classappend="${item.actual} ? 'active'">
				<a class="page-link" th:href="@{${page.url}(page=${item.numero - 1})}" th:if="${not item.actual}"
					th:text="${item.numero}"></a>
				<span class="page-link" th:if="${item.actual}" th:text="${item.numero}"></span>
			</li>

			<!-- Página siguiente -->
			<li class="page-item" th:classappend="${page.paginaActual == page.totalPaginas} ? 'disabled'">
				<a class="page-link" th:href="@{${page.url}(page=${page.paginaActual})}"
					th:if="${page.paginaActual < page.totalPaginas}">Siguiente</a>
				<span class="page-link" th:if="${page.paginaActual == page.totalPaginas}">Siguiente</span>
			</li>

			<!-- Última página -->
			<li class="page-item" th:classappend="${page.last} ? 'disabled'">
				<a class="page-link" th:href="@{${page.url}(page=${page.totalPaginas - 1})}"
					th:if="${not page.last}">Última</a>
				<span class="page-link" th:if="${page.last}">Última</span>
			</li>
		</ul>

	</nav>
</body>

</html>